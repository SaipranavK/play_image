from PIL import Image
thresh = 50
#intresting thresh 150 140 160 170
def function(x):
    if x>thresh:
        return thresh
    else:
        return 0
    

img = Image.open('fo333.png')

#fn = lambda x : 255 if x > thresh else 0
r = img.convert('P').point(function, mode='L')
r.save('fo3331.png')


